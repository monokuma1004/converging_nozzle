FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform 101325;

boundaryField
{
    inlet
    {
        type            totalPressure;
	gamma           1.4;
        p0              uniform 212782.5;
    }

    topwall
    {
        type	        zeroGradient;

    }
    
    outlet
    {
        type            waveTransmissive;
        field           p;
        psi             thermo:psi;
        gamma           1.4;
	fieldInf	101325;
        value           uniform 101325;

    }
    
    plate
    {
        type            waveTransmissive;
        field           p;
        psi             thermo:psi;
        gamma           1.4;
	fieldInf	101325;
        value           uniform 101325;

    }

    wall1
    {
        type            wedge;
    }
    wall2
    {
        type            wedge;
    }

}


